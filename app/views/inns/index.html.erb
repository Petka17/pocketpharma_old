<div class="row">
	<div class="col-md-6">
		<h1>Список МНН</h1>
		<span>Количество: <%= @inns.count %></span>
	</div>
</div>

<%= will_paginate @inns %>

<div class="table-responsive">
	<table class="table table-condensed table-hover">
		<tr>
			<th>Название</th>
			<th>Количество продуктов</th>
		</tr>
		
		<% @inns.each do |inn| %>
			<tr>
				<td><%= link_to inn.name, inn %></td>				
				<td><%= inn.products.count %></td>
			</tr>
		<% end %>

	</table>
</div>