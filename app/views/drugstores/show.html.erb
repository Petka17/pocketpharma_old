<h1><%= @drugstore.name %></h1>

<table>
	<tr>
		<th>ID</th>
		<th>External Id</th>
		<th>Name</th>
		<th>Price</th>
		<th>Amount</th>
	</tr>
	
	<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><%= product.external_id %></td>
			<td><%= product.full_name %></td>
			<td><%= product.price %></td>
			<td><%= product.amount %></td>
		</tr>
	<% end %>

</table>