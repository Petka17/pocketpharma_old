<div class="row">
	<div class="col-md-6">
		<h4><%= link_to "<- Назад", drugstores_path %></h4>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<h1><%= @drugstore.name %></h1>
	</div>
</div>

<%= will_paginate @products %>

<div class="table-responsive">
	<table class="table table-condensed table-hover">
		<tr>
			<th>Id</th>
			<th>Внешний Id</th>
			<th>Название</th>
			<th>Цена</th>
			<th>Количество</th>
		</tr>
		
		<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= product.external_id %></td>
				<td><%= product.full_name %></td>
				<td><%= product.price %></td>
				<td><%= product.amount %></td>
			</tr>
		<% end %>

	</table>
</div>